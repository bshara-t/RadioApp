<LinearLayout
    android:id="@+id/layMainParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_broadcasts"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout
        android:id="@+id/layContainer_broadcasts_Main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_12sdp"
        android:layout_weight="3">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layContainer_Player_Nav_Main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_12sdp"
        android:layout_weight="7">

        <LinearLayout
            android:id="@+id/layContainer_Player_Main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layContainer_Nav_Main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2">


        </LinearLayout>

    </LinearLayout>

</LinearLayout>