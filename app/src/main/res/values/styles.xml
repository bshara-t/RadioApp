<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/navbar_back_color</item>
        <!-- Change voice icon -->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>
        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>
        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/ic_arrow_back</item>
        <!-- Change icon for the suggestions -->
        <item name="searchSuggestionIcon">@drawable/ic_music_suggestion</item>
        <!-- Change background for the suggestions list view -->
        <item name="searchSuggestionBackground">@drawable/background_broadcasts</item>
        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/navbar_item_text</item>
        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/lightPrimaryColor</item>
        <!-- Hint for edit text -->
        <item name="android:hint">@string/title_search</item>
    </style>
</resources>
